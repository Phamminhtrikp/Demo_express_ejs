<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>

    <!--link css-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1 class="text-center mt-3 mb-3">
            <%= title%>
        </h1>

        <% if(action == 'add') { %>

            <div class="card">
                <div class="card-header">New Account Form</div>
                <div class="card-body">
                    <form method="POST" action="/manage/add">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Name</label>
                                    <input type="text" name="name" id="name" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Email</label>
                                    <input type="email" name="email" id="email" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Password</label>
                                    <input type="text" name="password" id="password" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Phone</label>
                                    <input type="text" name="phone" id="phone" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="formFile" class="form-label">Image</label>
                                    <input class="form-control" type="file" id="formFile">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Created At</label>
                                    <input type="datetime-local" name="createdAt" id="createdAt" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                        </div>
                    </form>
                </div>
            </div>

            <% } else if(action == 'edit') { %>
                <div class="card">
                    <div class="card-header">Edit Form</div>
                    <div class="card-body">
                        <form method="POST" action="/manage/edit/<%= data.id %>">
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Name</label>
                                        <input type="text" name="name" id="name" class="form-control" value="<%= data.name %>" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Email</label>
                                        <input type="email" name="email" id="email" class="form-control" value="<%= data.email %>" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Password</label>
                                        <input type="text" name="password" id="password" class="form-control" value="<%= data.password %>" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Phone</label>
                                        <input type="text" name="phone" id="phone" class="form-control" value="<%= data.phone %>"/>
                                    </div>
                                </div>
                            </div>
    
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">Image</label>
                                        <input class="form-control" type="file" id="formFile" value="<%= data.image %>"/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Created At</label>
                                        <input type="datetime" name="createdAt" id="createdAt" class="form-control" value="<%= data.createdAt %>"/>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="submit" name="submit_button" class="btn btn-primary" value="Edit" />
                            </div>
                        </form>
                        
                    </div>
                </div>
                <% }  else { %>
                
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">Acounts Data</div>
                        <div class="col">
                            <a href="/manage/add" class="btn btn-success btn-sm float-end">Add</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tr>
                                <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Password</th>
                                    <th>Phone</th>
                                    <th>Image</th>
                                    <th>Created At</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                            </tr>
                            <%
                            if(data.length > 0)
                            {
                                data.forEach(function(data){
                            %>
                            <tr>
                                <td> <%= data.id %> </td>
                                        <td> <%= data.name %> </td>
                                        <td>  <%= data.email %> </td>
                                        <td> <%= data.password %> </td>
                                        <td> <%= data.phone %> </td>
                                        <td> <%= data.image %> </td>
                                        <td> <%= data.createdAt %> </td>

                                        <td><a href="/manage/edit/<%= data.id %>" class="btn btn-primary btn-lg active" role="button"
                                                aria-pressed="true">Edit</a></td>
                                        <td><a href="/manage/delete/<%= data.id %>" class="btn btn-danger btn-lg active" role="button"
                                                aria-pressed="true">Delete</a></td>
                                <td></td>
                            </tr>
                            <%
                                });
                            }
                            else
                            {
                            %>
                            <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>
                            <%
                            }
                            %>
                        </table>
                    </div>
                </div>
            </div>

            <% } %>

        </div> 


</body>

</html>